{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,	
    "jsx": "preserve",	
    "strict": true,
    "noUnusedLocals": true,		
    "noUnusedParameters": true,		
    "noImplicitReturns": true,		
    "baseUrl": "./src",			
    "paths": {			 // 절대경로를 사용하기 위해 경로를 매핑해주는 옵션	 
      "components/*": ["./components/*"],
      "utils/*": ["./utils/*"],		
      "hooks/*": ["./hooks/*"]		
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.tsx"],	
  "exclude": ["node_modules"]
}
